@model ProfileViewModel
<style>
    .Mcontainer {
        position: relative;
        width: 100%;
    }

    .image {
        opacity: 1;
        display: block;
        width: 100%;
        height: auto;
        transition: .5s ease;
        backface-visibility: hidden;
    }

    .middle {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .Mcontainer:hover .image {
        opacity: 0.3;
    }

    .Mcontainer:hover .middle {
        opacity: 1;
    }

    .text {
        background-color: #4CAF50;
        color: white;
        font-size: 16px;
        padding: 16px 32px;
    }
</style>
<!-- Page Header -->
<header class="masthead" style="background-image: url('@Url.Content("~/img/myProfile.jpeg")')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    @{ string hi = Model.Profile.FirstName == null ? Model.email : Model.Profile.FirstName;}
                    <h1 style="color:#F3F3F3">@hi</h1>
                    <span class="subheading"><span style="color:#98E8D6">FirstName:</span> @Model.Profile.FirstName</span>
                    <span class="subheading"><span style="color:#98E8D6">LastName:</span>  @Model.Profile.LastName</span>
                    <span class="subheading"><span style="color:#98E8D6">Email:</span>  @Model.email</span>
                    <span class="subheading"><span style="color:#98E8D6">Folowers:</span> @Model.Profile.Folowers</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content -->
<div class="container">

    <div class="row">
        <div class="col">
            <div class="card border-0" style="width: 18rem;">
                <h5 class="card-title text-center card_title">Card title</h5>
                <div class="card-body">
                    @if (Model.Profile.ImageData == null)
                    {
                        <img src="https://picsum.photos/300/250" alt="Avatar" class="image card-img-top">

                    }
                    else
                    {
                        <img class="img-thumbnail" height="300" width="250"
                             src="@Url.Action("GetAvatar", "Home", new { Model.Profile.ProfileID })" />
                    }
                </div>

            </div>
        </div>
        <div class="col">
            <form asp-action="Edit" asp-controller="Profile" id="myForm" enctype="multipart/form-data">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="text-center card_title" colspan="2">UserName</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>FirstName</td>
                            <td><input type="text" name="FirstName" value="@Model.Profile.FirstName" /> </td>
                        </tr>
                        <tr>
                            <td>LastName</td>
                            <td><input type="text" name="LastName" value="@Model.Profile.LastName" /></td>
                        </tr>
                        <tr>
                            <td>Folowers</td>
                            <td>@Model.Profile.Folowers</td>
                        </tr>
                        <tr>
                            <td>Avatar Image</td>
                            <td>
                                <div style="position:relative;">

                                    <a class='btn' href='javascript:;'>
                                        Select File...
                                        <input type="file" name="Image" size="40" class="btn btn-link"
                                               style="position:absolute;z-index:2;top:0;
                                                 left:0;filter: alpha(opacity=0); opacity:0;
                                                 background-color:transparent;color:transparent;"
                                               onchange='$("#upload-file-info").html($(this).val());'>
                                    </a>
                                    <span class='label label-info' id="upload-file-info"></span>

                                    @if (TempData["error"] != null)
                                    {
                                        <div class="alert alert-danger">@TempData["error"]</div>
                                    }
                                    else
                                    {
                                        @if (Model.Profile.ImageData == null)
                                        {
                                            <div class="form-text" style="font-size:18px;margin-left:25px;color:#784F61;cursor:default">No Image</div>
                                        }
                                        else
                                        {
                                            @using (Html.BeginForm("DeleteImage", "Admin", FormMethod.Post))
                                            {

                                                @Html.HiddenFor(p => p.Profile.ProfileID)
                                                <button type="submit" class="btn btn-link" style="font-size:12px;color:#D80000">
                                                    Delete
                                                </button>
                                            }
                                        }

                                    }

                                </div>
                            </td>

                        </tr>
                        <tr>
                            <td>@Html.ValidationSummary()</td>

                        </tr>
                        <tr>

                            <td colspan="2" class="text-center">
                                <button type="submit" class="btn btn-light btn-sm">Save</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>

    </div>



</div>
<style>
    .card_title {
        color: #323B50;
    }

        .card_title:hover {
            cursor: default;
            color: #2B3449;
        }

    .subheading {
        cursor: default;
    }


    .btn-link:hover, .btn-link:focus {
        color: #934A4A !important;
        text-decoration: none;
    }

   

   

   
</style>
<script>
    $('#button').on('click', function (e) {
        e.preventDefault();
        $('#file-input').trigger('click');
    });
</script>
