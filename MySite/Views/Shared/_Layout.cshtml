<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>MarcBlog</title>
    @RenderSection("Style", false)
    <!-- Bootstrap core CSS -->
    <link asp-href-include="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--Favicon-->
    <link rel="icon" type="image/png" asp-href-include="~/favicon/fav.png" />
    <!-- Custom fonts for this template -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <!-- Normalize-->
    <link rel="stylesheet" asp-href-include="~/normalize.css/normalize.min.css" />

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-131372400-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-131372400-1');
    </script>

    <link asp-href-include="~/css/my-blog.min.css" rel="stylesheet">


    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body>
    <style>
    </style>
    <!-- Navigation -->
    @await Component.InvokeAsync("UserMenu")

    @RenderBody()
    <hr>
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <ul class="list-inline text-center">
                        <li class="list-inline-item">
                            <a href="#">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <p class="copyright text-muted">Copyright &copy; MarcBlog 2018</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Bootstrap core JavaScript -->
    <script asp-src-include="~/vendor/jquery/jquery.min.js"></script>
    <script asp-src-include="~/vendor/jquery-validation/dist/*.min.js"></script>
    <script asp-src-include="~/vendor/jquery-validation-unobtrusive/*.min.js"></script>
    <script asp-src-include="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script asp-src-include="~/js/my-blog.min.js"></script>
    <script async asp-src-include="~/admin/ckeditor/ckeditor.js"></script>
  
    @RenderSection("Script", false)
</body>
</html>
<style>
    .container img {
        max-width: 100%;
        height: auto;
    }

    .btn-link:hover, .btn-link:focus {
        color: #2DA4E1;
        text-decoration: none;
    }

    .btn-link {
        color: #16181b;
    }

    .dropdown:hover > .dropdown-menu {
        display: block;
    }

    .dropdown > .dropdown-menu !important {
        display: none;
    }
</style>