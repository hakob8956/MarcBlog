<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>My Blog</title>

    <!-- Bootstrap core CSS -->
    <link asp-href-include="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template -->
    <link asp-href-include="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <!-- Custom styles for this template -->
    <link asp-href-include="~/css/clean-blog.min.css" rel="stylesheet">
    <script asp-src-include="~/admin/ckeditor/ckeditor.js"></script>

</head>
<body>
    <style>
        .btn-link:hover, .btn-link:focus {
            color: #2DA4E1;
            text-decoration: none;
        }

        .btn-link {
            color: #16181b;
        }

        .dropdown:hover > .dropdown-menu {
            display: block;
        }

        .dropdown > .dropdown-menu {
            display: none;
        }
    </style>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Marc  News</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>

                    <li class="nav-item dropdown">

                        <a href="#" class="dropdown-toggle nav-link" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="far fa-user-circle" style="font-size:15px"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" style="background-color:#F1F3F4">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-action="Index" asp-controller="Users">
                                    <button type="submit" class="btn btn-link" style="font-size:12px">
                                        MyProfile
                                    </button>
                                </form>
                                if (User.IsInRole("admin"))
                                {
                                    <form asp-action="Index" asp-controller="Admin">
                                        <button type="submit" class="btn btn-link" style="font-size:12px">
                                            Admin Panel
                                        </button>
                                    </form>
                                    
                                }

                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
                                {
                                    <button type="submit" class="btn btn-link" style="font-size:12px">
                                        Log Out
                                    </button>
                                }

                            }
                            else
                            {
                                <form class="px-4 py-3" method="post" asp-controller="Account" asp-action="Login">
                                    <div class="form-group">
                                        <label>Email address</label>
                                        <input type="email" name="Email" class="form-control" placeholder="email@example.com">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleDropdownFormPassword1">Password</label>
                                        <input type="password" class="form-control" name="Password" placeholder="Password">
                                    </div>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="dropdownCheck">
                                        <label class="form-check-label">
                                            Remember me
                                        </label>
                                    </div>
                                    <button type="submit" class="btn btn-primary normalButton" style="padding:5px;width:45%"><p style="font-size:12px;display:inline">Sign in</p></button>
                                </form>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="Register" asp-controller="Account">New around here? Sign up</a>
                                <a class="dropdown-item" href="#">Forgot password?</a>
                            }
                        </div>
                    </li>


                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <hr>
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <ul class="list-inline text-center">
                        <li class="list-inline-item">
                            <a href="#">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>

                    </ul>
                    <p class="copyright text-muted">Copyright &copy; MarcNews 2018</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Bootstrap core JavaScript -->
    <script asp-src-include="~/vendor/jquery/jquery.min.js"></script>
    <script asp-src-include="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Custom scripts for this template -->
    <script asp-src-include="~/js/clean-blog.min.js"></script>
</body>
</html>
