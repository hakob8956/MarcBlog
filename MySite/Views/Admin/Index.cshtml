@model IEnumerable<Post>
@{
    ViewBag.Title = "All Posts";
    Layout = "_AdminLayout";
}
<div class="col-md-10">
    <div class="row">
        <div class="col-md-11">
            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title">Content Table</div>
                    <div class="panel-options"

                    </div>
                </div>
                <div class="panel-body">
                   
    
                    <table class="table table-striped table-bordered table-condensed table-hover">
                       
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-right">@item.PostID</td>
                                <td>@item.Title</td>
                                <td>@Html.Raw(@item.Description)</td>
                                <td>@item.Category</td>
                                <td class="text-center">
                                    @using (Html.BeginForm("Delete", "Admin", FormMethod.Post))
                                    {
                                        <input type="hidden" value="@item.DateTime" />
                                        <a asp-action="Edit" class="btn btn-sm btn-primary normalButton"
                                           asp-route-postID="@item.PostID" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <input type="hidden" name="PostID" value="@item.PostID" />
                                        <button type="submit" class="btn btn-danger btn-sm normalButton" title="Delete">
                                            <i class="fas fa-minus-circle"></i>
                                        </button>
                                    }
                                </td>
                            </tr>

                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

