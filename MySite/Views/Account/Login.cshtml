
@model LoginModel
<header class="masthead" style="background-image: url('@Url.Content("~/img/Register2.jpeg")')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1></h1>
                    <span class="subheading"></span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container text-center">
    <form method="post" asp-controller="Account" asp-action="Login">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">


            <label asp-for="Email"></label><br />
            <input asp-for="Email" class="form-control form-group" style="width:45%;display:inline" /><br />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">


            <label asp-for="Password"></label><br />
            <input asp-for="Password" class="form-control form-group" style="width:45%;display:inline" /><br />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-check-label">Remember</label>
            <input asp-for="RememberMe" class="form-check-input" style="margin:5px;margin-top:11px"/>
        </div>
       
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-group" value="Login" />
            <a class="btn btn-primary btn-group" asp-action="Register">Register</a>
        </div>
    </form>

</div>